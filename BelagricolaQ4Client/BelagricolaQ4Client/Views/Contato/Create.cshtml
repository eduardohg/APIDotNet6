@using System.Data
@model BelagricolaQ4Client.Models.Contato
@{
    ViewData["Title"] = "Create Contato";
}
@Html.Raw(TempData["msg"])


<div class="text-center">
    <h1 class="display-4">Criar Contato</h1>
    
</div>
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateContato" asp-controller="Contato">
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Telefone" class="control-label"></label>
                <input asp-for="Telefone" class="form-control" type="tel" placeholder="(43) 33348-7314" pattern="(\([0-9]{2}\))\s([9]{1})?([0-9]{4})-([0-9]{4})" />
            </div>
            <div class="form-group">
                <label asp-for="Celular" class="control-label"></label>
                <input asp-for="Celular" class="form-control" type="tel" placeholder="(43) 98415-4132" pattern="(\([0-9]{2}\))\s([9]{1})?([0-9]{4})-([0-9]{4})" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>


